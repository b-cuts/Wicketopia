<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wicketopia</groupId>
    <artifactId>wicketopia-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Wicketopia</name>
    <description>A Rapid Application Development (RAD) library for the Apache Wicket framework</description>
    <url>http://www.wicketopia.org</url>
    <modules>
        <module>wicketopia</module>
        <module>hibernate-archetype</module>
        <module>jpa-archetype</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.7</version>
            <scope>test</scope>
            <classifier>jdk15</classifier>
        </dependency>
    </dependencies>

    <developers>
        <developer>
            <id>jwcarman</id>
            <name>James Carman</name>
            <roles>
                <role>admin</role>
                <role>developer</role>
                <role>architect</role>
            </roles>
            <timezone>-5</timezone>
            <organization>Carman Consulting, Inc.</organization>
            <organizationUrl>http://www.carmanconsulting.com</organizationUrl>
            <email>james@carmanconsulting.com</email>
        </developer>
    </developers>

    <reporting>
        <plugins>
            <!--
            Enables Cobertura Code Coverage Reports
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
            </plugin>

            <!--
            Generate JavaDocs
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>

            <!--
            Generates Source Cross-Reference (source links in JavaDocs).
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
            </plugin>

            <!--
            Enables Maven Surefire Reports (unit testing reports)
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>

            <!--
            Enables clirr plugin (release compatibility reports)
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>clirr-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </reporting>

    <distributionManagement>
        <site>
            <id>sourceforge.net</id>
            <name>SourceForge Site</name>
            <url>scp://shell.sourceforge.net/home/groups/w/wi/wicketopia/htdocs</url>
        </site>
        <repository>
            <id>sourceforge.net</id>
            <name>Domdrides Release</name>
            <url>scp://shell.sf.net/home/groups/w/wi/wicketopia/htdocs/m2repo/releases</url>
        </repository>
        <snapshotRepository>
            <id>sourceforge.net</id>
            <name>Domdrides Snapshot</name>
            <url>scp://shell.sf.net/home/groups/w/wi/wicketopia/htdocs/m2repo/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>scm:svn:http://wicketopia.svn.sourceforge.net/svnroot/wicketopia/trunk</connection>
        <developerConnection>scm:svn:https://wicketopia.svn.sourceforge.net/svnroot/wicketopia/trunk
        </developerConnection>
        <url>http://wicketopia.svn.sourceforge.net/viewvc/wicketopia/trunk</url>
    </scm>

    <mailingLists>
        <mailingList>
            <name>Wicketopia Users List</name>
            <subscribe>http://lists.sourceforge.net/mailman/listinfo/wicketopia-user</subscribe>
            <unsubscribe>http://lists.sourceforge.net/mailman/listinfo/wicketopia-user</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=wicketopia-user</archive>
        </mailingList>
        <mailingList>
            <name>Wicketopia Developers List</name>
            <subscribe>http://lists.sourceforge.net/mailman/listinfo/wicketopia-developer</subscribe>
            <unsubscribe>http://lists.sourceforge.net/mailman/listinfo/wicketopia-developer</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=wicketopia-developer</archive>
        </mailingList>
        <mailingList>
            <name>Wicketopia Commits List</name>
            <subscribe>http://lists.sourceforge.net/mailman/listinfo/wicketopia-commits</subscribe>
            <unsubscribe>http://lists.sourceforge.net/mailman/listinfo/wicketopia-commits</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=wicketopia-commits</archive>
        </mailingList>
    </mailingLists>
</project>