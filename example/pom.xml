    <groupId>org.wicketopia</groupId>
    <artifactId>wicketopia-example</artifactId>
    <packaging>war</packaging>
    <name>Wicketopia Example Application</name>

    <properties>
        <dbcp.version>1.2.2</dbcp.version>
