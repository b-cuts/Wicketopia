        <jpa.version>1.0</jpa.version>
        <hibernate.version>3.6.0.Final</hibernate.version>
        <configuration>dev</configuration>
    </properties>

    <profiles>
        <profile>
            <id>test</id>
            <properties>
                <configuration>test</configuration>
